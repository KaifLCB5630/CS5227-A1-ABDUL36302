@page
@model CS5227_A1_ABDUL36302.Pages.MenuModel
@{
    ViewData["Title"] = "Menu";
}

<h2>Menu</h2>

<form method="get">
    <div class="input-group mb-3">
        <input type="text" class="form-control" name="searchQuery" placeholder="Search for food items..." value="@Model.SearchQuery">
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit">Search</button>
        </div>
    </div>
</form>

<div class="row">
    @foreach (var item in Model.FoodItems)
    {
        <div class="col-md-4 mb-2">
            <div class="card" style="max-width: 18rem;">
                <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 150px; object-fit: cover;">
                <div class="card-body" style="padding: 10px;">
                    <h5 class="card-title" style="font-size: 1.2rem; margin-bottom: 5px;">@item.Name</h5>
                    <p class="card-text" style="font-size: 0.9rem; margin-bottom: 5px;">@item.Description</p>
                </div>
                <ul class="list-group list-group-flush" style="padding-left: 0; margin-bottom: 5px;">
                    <li class="list-group-item" style="padding: 5px; font-size: 0.9rem;">Category: @item.Category</li>
                    <li class="list-group-item" style="padding: 5px; font-size: 0.9rem;">Price: @item.Price.ToString("C")</li>
                </ul>
                <div class="card-body" style="padding: 10px;">
                    <form method="post">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" formaction="?handler=AddToCart" class="btn btn-primary btn-sm">Add to Cart</button>
                    </form>
                </div>
            </div>
        </div>
    }
    }
</div>
